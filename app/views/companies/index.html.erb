
<div class="main_container">
  <h1>General Forsamling</h1>
    <div class="sub_container">
      <br>

       <%= form_for(@company, :html => { :onsubmit => "return validate_user_fields( this );" }) do |f| %>
             <div class="field">
                <%= f.label :email %><br>

                <%= f.text_field :email %>
            </div>
        <br>
            <div class="actions">
                <%= f.submit %>
              </div>
          <br>
        <% end %>
    </div>
<br>
<br>
</div>
</div>

